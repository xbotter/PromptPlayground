<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:PromptPlayground.ViewModels"
			 xmlns:i="https://github.com/projektanker/icons.avalonia"
			 x:Class="PromptPlayground.Views.SkillView"
			 x:DataType="vm:SkillViewModel">

	<UserControl.Styles>
		<Style Selector="Button.skillBtn">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Margin" Value="2"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="MinWidth" Value="30"/>
			<Setter Property="MinHeight" Value="30"/>
		</Style>
	</UserControl.Styles>
	<StackPanel>
		<WrapPanel HorizontalAlignment="Left">
			<Button Classes="skillBtn" i:Attached.Icon="mdi-folder-outline" ToolTip.Tip="Open Skill Folder" Click="OnOpenFolder"/>
			
			<!--<Button Classes="skillBtn" i:Attached.Icon="mdi-file-plus-outline" ToolTip.Tip="Add New Function" IsVisible="{Binding OpenSkillFolder}"/>-->
			<!--<Button Classes="skillBtn" i:Attached.Icon="mdi-arrow-expand-right"/>-->
			<!--<Button Classes="skillBtn" i:Attached.Icon="mdi-arrow-expand-left"/>-->
		</WrapPanel>
		<ListBox
					IsVisible="{Binding OpenSkillFolder}"
					ItemsSource="{Binding Functions}"
					SelectedIndex="{Binding SelectedIndex}"
					SelectionChanged ="OnSelectedFunctionChangedAsync">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<WrapPanel Margin="5">
						<TextBlock Text="{Binding Name}"/>
						<TextBlock Text="*" IsVisible="{Binding IsChanged}"/>
					</WrapPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

	</StackPanel>

</UserControl>
